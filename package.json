{
  "name": "wegomajor",
  "version": "1.0.0",
  "description": "We go major",
  "repository": {
    "type": "git",
    "url": "https://github.com/leihla/major"
  },
  "author": {
    "name": "Leihla Pinho"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leihla/major/issues"
  },
  "engines": {
    "node": "^8"
  },
  "homepage": "https://wegomajor.com",
  "main": "assets/scripts",
  "scripts": {
    "install": "bundle install --path bundle/cache",
    "postinstall": "[ -f app/assets/scripts/config/local.js ] || echo 'module.exports = {};' > app/assets/scripts/config/local.js; [ -f _config-dev.yml ] || echo 'baseurl: http://localhost:3000' > _config-dev.yml",
    "serve": "DS_ENV=development gulp serve",
    "build": "DS_ENV=production NODE_ENV=production gulp",
    "build-stage": "DS_ENV=staging NODE_ENV=staging node --max-old-space-size=4096 ./node_modules/gulp/bin/gulp.js",
    "lint": "eslint app/assets/scripts/ --ext .js",
    "test": "echo \"No tests\" && exit 0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ],
      "require-globify",
      "envify"
    ]
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.13",
    "browserify": "^14.4.0",
    "del": "^3.0.0",
    "envify": "^4.1.0",
    "eslint": "^4.8.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "gulp": "^3.9.1",
    "gulp-cache": "^0.4.6",
    "gulp-csso": "^3.0.0",
    "gulp-exit": "0.0.2",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^3.4.0",
    "gulp-load-plugins": "^1.5.0",
    "gulp-markdown-to-json": "^1.0.3",
    "gulp-plumber": "^1.1.0",
    "gulp-rev": "^8.0.0",
    "gulp-rev-replace": "^0.4.3",
    "gulp-sass": "^3.1.0",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-uglify": "^3.0.0",
    "gulp-useref": "^3.1.2",
    "gulp-util": "^3.0.8",
    "jeet": "7.2.0",
    "node-bourbon": "^4.2.8",
    "node-notifier": "^5.1.2",
    "node-sass": "^4.5.3",
    "require-globify": "^1.4.1",
    "surge": "^0.20.1",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.9.0",
    "yamljs": "^0.3.0"
  },
  "dependencies": {
    "lodash.defaultsdeep": "^4.6.0"
  }
}
